<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="147dp"
        android:orientation="vertical"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/news_item_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="@string/news_item_title"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>
        <TextView
            android:id="@+id/news_item_textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/news_item_context"
            android:textSize="10sp"
            android:layout_margin="5dp">
        </TextView>
        <TextView
            android:id="@+id/news_item_textView3"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/news_item_review"
            android:textSize="10sp"
            android:layout_margin="5dp">
        </TextView>
        <Button
            android:id="@+id/news_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_item_btn"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:background="#00ff0000"
            android:layout_gravity="right"

            >

        </Button>


</LinearLayout>
    <ImageView
        android:id="@+id/news_item_imageView"
        android:layout_width="100dp"
        android:layout_height="147dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_border"
        android:src="@mipmap/ic_launcher">
    </ImageView>



</LinearLayout>